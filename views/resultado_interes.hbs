<h1 class="mt-3">Interés Compuesto</h1>

{{#if datosTablaInteres}}
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Periodo</th>
      <th scope="col">Depósito</th>
      <th scope="col">Interés</th>
      <th scope="col">Saldo Final</th>
    </tr>
  </thead>
  <tbody>
    {{#each datosTablaInteres}}
    <tr>
      <th scope="row">{{mes}}</th>
      <th scope="row">{{capital}}</th>
      <th scope="row">{{interes}}</th>
      <th scope="row">{{saldoFinal}}</th>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}